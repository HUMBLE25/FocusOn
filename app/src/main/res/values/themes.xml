<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 앱의 기본 테마 -->
    <style name="Theme.FocusOn" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- 기존의 액션바 제거 -->
        <item name="windowActionBar">false</item> <!-- 기본 ActionBar를 제거하고 Toolbar를 사용할 수 있도록 설정 -->
        <item name="windowNoTitle">true</item> <!-- Toolbar를 제목 영역으로 사용 -->

        <!-- 기본 색상들 -->
        <item name="colorPrimary">#3A86FF</item> <!-- 앱의 기본 색상: Toolbar 및 주요 버튼 배경 -->
        <item name="colorPrimaryDark">#3A86FF</item> <!-- 상태바 색상: 앱의 상단 상태바 배경 -->
        <item name="colorAccent">#3A86FF</item> <!-- 강조 색상: 체크박스 선택, 액티브 요소 강조 -->

        <item name="android:textColorPrimary">#000</item> <!-- 기본 텍스트 색상 -->
        <item name="popupMenuStyle">@style/FocusOnPopupMenu</item><!-- 팝업 메뉴 스타일 적용 -->
        <item name="android:datePickerDialogTheme">@style/FocusOnDatePickerDialog</item><!-- DatePickerDialog 스타일 적용 -->
        <item name="buttonStyle">@style/FocusOnButton</item><!-- 버튼 스타일 적용 -->
        <item name="toolbarStyle">@style/FocusOnToolbar</item> <!-- Toolbar 스타일 적용 -->
    </style>

    <!-- Toolbar 스타일 정의 -->
    <style name="FocusOnToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:titleTextColor">#FFFFFF</item> <!-- 타이틀 텍스트 색상 -->
        <item name="android:background">#3A86FF</item> <!-- Toolbar 배경색 -->
    </style>

    <!-- 팝업 메뉴 스타일 정의 -->
    <style name="FocusOnPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:background">#FFFFFF</item> <!-- 팝업 메뉴 배경을 흰색으로 설정 -->
    </style>

    <!-- 버튼 스타일 정의 -->
    <style name="FocusOnButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">#3A86FF</item> <!-- 버튼 배경색 -->
        <item name="android:textColor">#FFFFFF</item> <!-- 버튼 텍스트 색상 -->
        <item name="android:elevation">10dp</item> <!-- 버튼 그림자 효과 -->
    </style>

    <!-- DatePickerDialog 스타일 정의 -->
    <style name="FocusOnDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">#000000</item> <!-- 달력의 숫자 및 기본 텍스트 색상을 검은색으로 설정 -->
        <item name="android:colorAccent">#fff</item> <!-- 달력 강조 색상: 선택된 날짜, 활성화 요소 등 -->
        <item name="android:background">#3A86FF</item> <!-- 달력 배경 색상을 흰색으로 설정 -->
    </style>
</resources>
